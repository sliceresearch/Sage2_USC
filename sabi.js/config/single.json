{
    "global": {
	"security" : "false",
	"server_port" : "10000",
	"tcp_port"    : "11000"
    },
    "main": {
        "header" : "<h1>Test server</h1>",
        "footer" : "<h4>sabi.js control interface</h4>",
        "image" : "images/sabi_coffee_400.jpg",
        "image_style" : "width=\"90%\" style=\"max-width:420px;align:center;margin: 0 auto;\"",
        "pages" : [ "Test1"  ]
    },
    "actions": {
        "audio-main-volume":   { "oscmessage" : "/level",  "server": "127.0.0.1:16003" },
        "textedit-on":      {  "command": "open -a TextEdit.app" },
        "textedit-off":     {  "command": "osascript -e 'quit app  \"TextEdit\"'" },
        "itunes-on":      {  "command": "open -a iTunes.app" },
        "itunes-off":     {  "command": "osascript -e 'quit app  \"iTunes\"'" }
    },

    "Test1" : {
        "title" : "Test1 setup",
        "navbar" : "true",
        "groups" : [ "group1", "group2"],
        "group1" : { 
            "title": "Group 1",
            "image": "images/x11_small.png",
            "actions": [
                {"title": "TextEdit ON", "action": "textedit-on"},
                {"title": "TextEdit OFF", "action": "textedit-off"}
            ]
        },
        "group2" : {
            "title": "Group 2",
            "image": "images/sage_small.jpg",
            "actions": [
                 {"title": "Volume",  "action": "audio-main-volume",  "role": "range", "minvalue": "0", "maxvalue": "100" }
           ]
        }
    }
}

